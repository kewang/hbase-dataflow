extends layout

block content
  .container
    .row
      .col-md-8(style="height: 300px;")
        h1 TABLES
        form.form-inline(role="form")
          button.btn.btn-default(type="button") Create table
          select.form-control
            option Table A
            option Table B
            option Table C
            option Table D
            option Table E
            option Table F
            option Table G
        table.table
          tr
            th CQ
            th Description
            th R1
            th R2
          tr
            td id
            td Identify
            td kewang
            td mxxx
          tr
            td name
            td Name
            td Michael Jordan
            td
          tr
            td bir
            td Birthday
            td
            td 1993/5/3
      .col-md-4.op-list-col(style="height: 600px;")
        h1 OPERATIONS
        .list-group
          a.list-group-item(href="#") Operation 1
          a.list-group-item(href="#") Operation 2
          a.list-group-item(href="#") Operation 3
          a.list-group-item(href="#") Operation 4
          a.list-group-item(href="#") Operation 5
          a.list-group-item.active(href="#") Operation 6
          a.list-group-item(href="#") Operation 7
          a.list-group-item(href="#") Operation 8
          a.list-group-item(href="#") Operation 9
          a.list-group-item(href="#") Operation 10
      .col-md-8(style="height: 300px;")
        h1 OPERATE
        h2 FOR PUT
        form.form-inline(role="form")
          .form-group
            label(for="inputOperate") Operate
            select.form-control(id="inputOperate")
              option PUT
          .form-group
            label(for="inputTable") Table
            select.form-control(id="inputTable")
              option Table A
              option Table B
              option Table C
          .form-group
            label(for="inputRowKey") Row Key
            input.form-control(type="text", placeholder="Input or Select CQs to build Row Key")
        h2 FOR GET
        form.form-inline(role="form")
          .form-group
            label(for="inputOperate") Operate
            select.form-control(id="inputOperate")
              option GET
              option SCAN
          .form-group
            label(for="inputTable") Table
            select.form-control(id="inputTable")
              option Table A
              option Table B
              option Table C
          .form-group
            label(for="inputRowKey") Row Key
            select.form-control(id="inputRowKey")
              option RK1
              option RK2
              option RK3
