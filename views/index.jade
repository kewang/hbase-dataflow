extends layout

block content
  .container
    .row
      #tables.col-md-2(ng-controller="TableCtrl")
        h2
          | Tables
          button.btn.btn-default(type="button", ng-click="createTable()")
            span.glyphicon.glyphicon-plus
        .list-group
          a.list-group-item(href="#", ng-repeat="t in tables", ng-click="changeTable(t)") {{ t.getName() }}
      #table-detail.col-md-6(ng-controller="TableDetailCtrl")
        h2 {{ table.getName() }}
        table.table.table-bordered.table-condensed.table-hover
          tr
            th Row Key
            th(ng-repeat="c in table.getFullCQs()") {{ c }}
          tr(ng-repeat="r in table.getFullRowkeys()")
            th {{ r.rowkey }}
            td(ng-repeat="c in r.cqs track by $index") {{ c }}
      #operations.col-md-4(ng-controller="OperationCtrl")
        h2 OPERATIONS
        .list-group
          a.list-group-item(href="#", ng-click="showOperationDialog(o)", ng-repeat="o in operations", ng-class="{0: 'list-group-item-success', 1: 'list-group-item-warning'}[o.getType()]") {{ o.getTitle() }}
  nav.navbar.navbar-default.navbar-fixed-bottom(role="navigation")
    .container
      form.form-inline(ng-controller="RowCtrl", role="form")
        .form-group
          select.form-control(ng-model="table", ng-options="t.getName() for t in tables")
            option(value="") Please select a table
          select.form-control(ng-model="rowCommand")
            option(value="") Please select a command
            option(value="create") Create Row
            option(value="update") Update Row
            option(value="get") Get Row
            option(value="scan") Scan Row
        button.btn.btn-primary(type="button", ng-click="showRowCtrlDialog()", ng-disabled="!(table && rowCommand)") Execute
        button.btn.btn-default(type="button", ng-click="exportData()") Export
        button.btn.btn-default(type="button", ng-click="showImportDataDialog()") Import
