.modal-header
  h4.modal-title Other
.modal-body
  form(name="otherDialogForm", role="form")
    input.form-control(type="text", placeholder="Please Input Operation title", ng-model="form.operationTitle", required)
    hr
    textarea.form-control(rows="5", placeholder="Please Input Operation summary", ng-model="form.operationSummary")
.modal-footer
  button.btn.btn-default(type="button", data-dismiss="modal") Close
  button.btn.btn-primary(type="button", ng-click="other()", ng-disabled="!otherDialogForm.$valid") Other
