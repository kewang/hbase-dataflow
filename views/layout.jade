doctype html
html(ng-app="hbase-dataflow-app")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    link(rel="stylesheet", href="javascripts/bootstrap/dist/css/bootstrap.css")
    link(rel='stylesheet', href='stylesheets/style.css')
  body(ng-controller="dataflow")
    .navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#")= title
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active: a(href="#") Home
            li: a(href="about") About
            li: a(href="contact") Contact
            li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown")
                | Dropdown
                b.caret
              ul.dropdown-menu
                li: a(href="#") Action
                li: a(href="#") Another action
                li: a(href="#") Something else here
                li.divider
                li.dropdown-header Nav header
                li: a(href="#") Separated link
                li: a(href="#") One more separated link
          ul.nav.navbar-nav.navbar-right
            li: a(href="../navbar/") Default
            li: a(href="../navbar-static-top/") Static top
            li.active: a(href="./") Fixed top

    block content

    a(href="https://github.com/kewangtw/hbase-dataflow")
      img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://camo.githubusercontent.com/e7bbb0521b397edbd5fe43e7f760759336b5e05f/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677265656e5f3030373230302e706e67", alt="Fork me on GitHub", data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png")
    script(src="javascripts/jquery/dist/jquery.js")
    script(src="javascripts/bootstrap/dist/js/bootstrap.js")
    script(src="javascripts/angular/angular.js")
    script(src="javascripts/models/Table.js")
    script(src="javascripts/models/Operation.js")
    script(src="javascripts/controller.js")
